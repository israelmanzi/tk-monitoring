logging {
	format = "logfmt"
	level = "debug"
	write_to = [loki.process.alloy.receiver]
}

loki.process "alloy" {
	stage.labels {
		values = {
			service_name = "alloy",
		}
	}
	forward_to = [loki.write.default.receiver]
}

loki.write "default" {
  endpoint {
      url = "http://localhost:3100/loki/api/v1/push"
  }
}
